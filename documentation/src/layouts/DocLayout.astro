---
import Container from '@components/Container.astro';
import BaseLayout from './BaseLayout.astro'
import ContentWithNav from '@components/ContentWithNav.astro';

const tableOfContent = [
    {title: 'Shulk'},
    {
        title: 'Introduction',
        slug: 'introduction'
    },
    {
        title: 'Get started',
        slug: 'get-started'
    },
    {title: 'Basics'},
    {
        title: 'Tagged unions',
        slug: 'tagged-unions'
    },
    {
        title: 'Pattern matching',
        slug: 'pattern-matching'
    },
    {title: 'Monads'},
    {
        title: 'Result',
        slug: 'result'
    },
    {
        title: 'Maybe',
        slug: 'maybe'
    },
    {
        title: 'Loading',
        slug: 'loading'
    },
    {
        title: 'Others'
    },
    {
        title: 'Wrappers',
        slug: 'wrappers',
    },
    {
        title: 'Procedural programming',
        slug: 'procedural-programming'
    }
];

   
const pathname = Astro.url.pathname

const [,,slug] = pathname.split('/')

const { title } = Astro.props
---

<BaseLayout title={title}>
    <Container>
        <ContentWithNav     
            tableOfContent={tableOfContent}
            selected={slug as string}
        >
            <slot />
        </ContentWithNav>
    </Container>
</BaseLayout>
	



