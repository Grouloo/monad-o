---
import Container from '@components/Container.astro';
import BaseLayout from './BaseLayout.astro'
import ContentWithNav from '@components/ContentWithNav.astro';

const tableOfContent = [
    { title: 'Table of content' },
    {
        title: 'If vs match',
        slug: '/examples/if-vs-match/'
    },
    {
        title: 'Classes vs unions',
        slug: '/examples/classes-vs-union/'
    },
    {
        title: 'Domain modeling',
        slug: '/examples/domain-modeling/'
    },
];

const pathname = Astro.url.pathname

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title + '- Shulk'}>
    <Container>
        <ContentWithNav 
            tableOfContent={tableOfContent} 
            selected={pathname} 
            title={frontmatter.title}        
        >
            <slot />
        </ContentWithNav>
    </Container>
</BaseLayout>
