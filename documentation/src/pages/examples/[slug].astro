---
import Container from '@components/Container.astro';
import BaseLayout from '../../layouts/BaseLayout.astro'
import ContentWithNav from '@components/ContentWithNav.astro';

export async function getStaticPaths() {
  return [
    { params: { slug: 'examples' }, props: {title: 'Examples'} },
    { params: { slug: 'if-vs-match' }, props: {title: 'If vs match'} },
    { params: { slug: 'classes-vs-union' }, props: {title: 'Classes vs tagged unions'} },
  ];
}

const tableOfContent = [
    {title: 'Examples'},
    {
        title: 'If vs match',
        slug: 'if-vs-match'
    },
    {
        title: 'Classes vs unions',
        slug: 'classes-vs-union'
    },
];

   
const pathname = Astro.url.pathname

console.log(pathname)

const { slug } = Astro.params

const { title } = Astro.props
---

<BaseLayout title={title}>
    <Container>
        <ContentWithNav 
            tableOfContent={tableOfContent} 
            selected={slug} 
            hx-get={'/articles/' + slug} 
        />
    </Container>
</BaseLayout>
